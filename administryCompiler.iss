SetupIconFile=E:\.NoID1290 Software\.administry\build\0.27\adminitry_ico_256x.ico
Compression=lzma
SolidCompression=yes
WizardStyle=modern

[Languages]
Name: "english"; MessagesFile: "compiler:Default.isl"
