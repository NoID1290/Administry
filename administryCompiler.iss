[Tasks]
Name: "desktopicon"; Description: "{cm:CreateDesktopIcon}"; GroupDescription: "{cm:AdditionalIcons}"; Flags: unchecked

[Files]
Source: "E:\.NoID1290 Software\.administry\build\0.27\{#MyAppExeName}"; DestDir: "{app}"; Flags: ignoreversion
Source: "E:\.NoID1290 Software\.administry\build\0.27\.powSys\*"; DestDir: "{userappdata}\Administry\powSys"; Flags: recursesubdirs createallsubdirs
Source: "E:\.NoID1290 Software\.administry\build\0.27\ins\*"; DestDir: "{app}\ins"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "E:\.NoID1290 Software\.administry\build\0.27\local\*"; DestDir: "{app}\local"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "E:\.NoID1290 Software\.administry\build\0.27\scripts\*"; DestDir: "{app}\scripts"; Flags: ignoreversion recursesubdirs createallsubdirs
Source: "E:\.NoID1290 Software\.administry\build\0.27\source\*"; DestDir: "{app}\source"; Flags: ignoreversion recursesubdirs createallsubdirs
